# MongoDB connection string (required). Host (and optional auth) only, or full URI including database.
MONGODB_URI=mongodb://localhost:27017
# Database name where collections (users, items) are stored. Use this or include it in MONGODB_URI (e.g. .../japan-surplus-store).
MONGODB_DB_NAME=japan-surplus-store

# JWT secret for admin authentication (required for admin)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# First-time admin seed only: create first admin user in DB (run: npm run seed)
# After that, login uses the User collection; you can add more admins in the database.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Facebook Page username for Messenger checkout (e.g. from https://facebook.com/YourPage -> YourPage)
NEXT_PUBLIC_FACEBOOK_PAGE_USERNAME=YourPageUsername

# Cloudflare R2 image storage (admin uploads)
# Create API token in Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=japan-surplus-images
# Public URL for the bucket (R2 public bucket URL or custom domain), no trailing slash
# e.g. https://pub-xxxx.r2.dev or https://images.yourdomain.com
R2_PUBLIC_URL=https://pub-xxxx.r2.dev
